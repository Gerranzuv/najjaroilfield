@model najjar.biz.Models.Test

@{
    ViewBag.Title = "AddTest";
}

<h2 style="color: #8b224e">Enter Test's Information</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true)
    <div class="container">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td colspan="1">
                        <form class="well form-horizontal" onsubmit="alert(1); validateMyForm(event);">
                            <fieldset>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-5">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Name)
                                    </div>
                                </div>
                                <br />
                                <br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-5">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                </div>
                                <br />
                                <br />
                                <br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.DurationInMinutes, htmlAttributes: new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-5">
                                        @Html.TextBoxFor(model => model.DurationInMinutes, new { @class = "form-control", @type = "number" })
                                        @Html.ValidationMessageFor(model => model.DurationInMinutes)
                                    </div>
                                </div>
                                <br />
                                <br />

                                <div class="form-group">
                                    @Html.LabelFor(model => model.isActive, new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-5">
                                        <label class="checkbox-inline">
                                            @Html.CheckBoxFor(model => model.isActive)
                                        </label>
                                    </div>
                                </div>


                            </fieldset>

                    </td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
