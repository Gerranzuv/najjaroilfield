@model najjar.biz.Models.Test

@{
    ViewBag.Title = "Edit "+Model.Name;
}

<h2>Edit @Model.Name's Data</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-5">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DurationInMinutes, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-5">
                @Html.TextBoxFor(model => model.DurationInMinutes, new { @class = "form-control", @type = "number" })
                @Html.ValidationMessageFor(model => model.DurationInMinutes)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.isActive, new { @class = "control-label col-sm-2" })
            <div class="col-sm-5">
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.isActive)
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
