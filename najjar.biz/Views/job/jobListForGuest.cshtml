@model IEnumerable<najjar.biz.Models.Job>

@{
    ViewBag.Title = "jobListForGuest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>Job List ForG uest</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>



<body>
    <h1>Open Vacancies</h1>
    <br />
    @foreach (var item in Model)
    {    <div class="card ">
         <div class="card-body" >
             <div class="col-0 col-sm-6 mb-1 well" >
                <div class="card-block">
                    <h3 class="card-title"><b>@Html.DisplayFor(model => item.Title)</b></h3>
                </div>
                <div class="row">
                    <div class="col-0">
                        <p class="card-text " style="  margin-left: 70%">
                            @Html.ActionLink(" Show Details >", "Details", new { id = item.id })

                        </p>
                    </div>
                </div>
                <div class="row" style="margin-top:2%">
                    <div class="form-group">
                        <label class="col-md-4  control-label" style=" margin-left: 10%; margin-top: -5%">Announcement Date</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group" style=" margin-left: 75%; margin-top: -8%">
                                @Html.DisplayFor(model => item.AnnouncementDate)
                            </div>
                        </div>
                    </div>

                </div>
                 <div class="row" style="margin-top:2%">
                     <div class="form-group">
                         <label class="col-md-4 control-label" style=" margin-left: 10%; margin-top: -5%">Expriy Date</label>
                         <div class="col-md-8 inputGroupContainer">
                             <div class="input-group" style=" margin-left: 75%; margin-top: -8%">
                                 @Html.DisplayFor(model => item.ClosingDate)
                             </div>
                         </div>
                     </div>

                 </div>
                <div class="row">
                    <div class="form-group" style="margin-top:2%">
                        <label class="col-md-4 control-label" style=" margin-left: 10%; margin-top: -5%">Status</label>
                        <div class="col-md-8 inputGroupContainer">
                            <div class="input-group" style=" margin-left: 75%; margin-top: -8%">
                                @Html.DisplayFor(model => item.Status)
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    }
</body>