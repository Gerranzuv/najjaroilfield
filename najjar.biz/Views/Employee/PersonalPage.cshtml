@model najjar.biz.Models.Employees
@{
    ViewBag.Title = "Personal Info Page";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    var Id = Request.QueryString["Employeeid"];
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.debug.js"
        integrity="sha384-NaWTHo/8YCBYJ59830LTz/P4aQZK1sS0SneOgAvhsIl3zBu8r9RevNg5lHCHAuQ/"
        crossorigin="anonymous"></script>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4 sidebar">
            <br />
            <ul class="nav nav-stacked nav-pills">
                <li id="PersonalInfo" class="active" style="color: #071689 !important; font-size: larger">
                    @Html.ActionLink("Personal Information", "PersonalPage", new { Employeeid = Id })
                </li>
                <li id="SalaryInfo" style="color: #071689 !important; font-size: larger">
                    @Html.ActionLink("Salary Information", "SalaryInfo", new { Employeeid = Id })
                </li>
                <li id="EmployeeDocs" style="color: #071689 !important; font-size: larger">
                    @Html.ActionLink("My Documents", "EmployeeDocs", "Support", new { Employeeid = Id }, null)
                </li>
                <li id="EmployeeVacation" style="color: #071689 !important; font-size: larger">
                    @Html.ActionLink("Employee Vacation", "EmployeeVacation", "EmployeesVacation", new { Employeeid = Id }, null)
                </li>
                <li id="EmployeeRating" style="color: #071689 !important; font-size: larger">
                    @Html.ActionLink("Employee Rating", "EmployeeRating", "EmployeeRating", new { Employeeid = Id }, null)
                </li>
                <li id="EmployeeRating" style="color: #071689 !important; font-size: larger">
                    @Html.ActionLink("Termination Info", "TerminationInfo", new { Employeeid = Model.Id }, null)
                </li>
                <li id="EmployeeRating" style="color: #071689 !important; font-size: larger">
                    @Html.ActionLink("Exams Info", "ExamsInfo", "OnlineExam", new { Employeeid = Model.Id }, null)
                </li>
            </ul>
        </div>

        <div class="col-md-5" id="PersonalInfoDV">
            <h2 class="text-center" style="color: #071689 !important;">Personal Information</h2>
            <table class="table table-responsive">
                <tr>
                    <th>

                        @Html.DisplayNameFor(model => model.Name) :
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Name)
                    </td>
                </tr>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.BirthDate) :
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.BirthDate)
                    </td>
                </tr>

                <tr>


                    <th>
                        @Html.DisplayNameFor(model => model.BirthPlace) :
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.BirthPlace)
                    </td>
                </tr>

                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.StartDate) :
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.StartDate)
                    </td>
                </tr>

                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Status) :
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Status)
                    </td>
                </tr>

                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Department):
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Department)
                    </td>
                </tr>

                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.DirectManager):
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.DirectManager)
                    </td>
                </tr>

                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeCode):
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EId)
                    </td>
                </tr>
            </table>



            <hr />
            <h2 class="text-center" style="color: #071689 !important;">Contact Information</h2>
            <table class="table table-responsive">

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber):
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </td>
                </tr>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.FixedNumber):
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.FixedNumber)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email):
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Address):
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Address)
                    </td>
                </tr>
            </table>

            <hr />
            @if (User.IsInRole("Administrator"))
            {
                <div class="row">
                    <div class="col-md-5">
                        <input type="button"
                               class="btn btn-primary" value="Edit Info"
                               onclick="location.href='@Url.Action("Edit", "Employee", new { id = Id })'" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-3">
            @if (Model.EmployeeImage != null)
            {
                var path = Path.Combine("/Images/", Model.EmployeeImage);
                <img src="@path" alt="@Model.Name" title="@Model.Name" class="img-thumbnail" height="200" />
            }
        </div>
    </div>
    <!-- /.row -->
</div>

