@model IEnumerable<najjar.biz.Models.JobRequest>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<div>
    <h2 style="color: #8b224e">Job Request Management</h2>

    <br />

    <p style="float:right;text-decoration-color:white;">

        <button class="btn btn-primary btn-default" onclick="location.href='@Url.Action("Create", "JobRequest")'">
            <i class="fa fa-plus-square pull-right" style="font-size:x-large"></i> Create New Job Request
        </button>

    </p>
    <table id="myTable" class="table table table-striped table-hover col-sm-10 col-md-10">
        <thead>
            <tr>

                <th>
                    Job Title
                </th>
                <th>
                    Candidate Name
                </th>
                <th>
                    EmailAddress
                </th>
                <th>
                    Phone Nimber
                </th>
                <th>

                    CV
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.jobName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)&nbsp;
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.ActionLink(@item.FilePath, "Download", new { FilePath = item.FilePath })

                    </td>


                    <td>
                        <a href="@Url.Action("Edit", "JobRequest", new { id = item.id })">
                            <i class="fa fa-pencil" style="font-size:x-large" data-toggle="tooltip" title="Edit Job Request"></i>
                        </a>
                        &nbsp; &nbsp;
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |*@

                        @*@Html.ActionLink("Details", "Details", new { id = item.id }) |*@
                        <a href="@Url.Action("Delete", "JobRequest", new { id = item.id })" data-toggle="tooltip" title="Delete Job Request">
                            <i class="fa fa-remove" style="font-size:x-large"></i>
                        </a>
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />


</div>
