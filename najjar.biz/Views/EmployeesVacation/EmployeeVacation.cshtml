@model IEnumerable<najjar.biz.Models.EmployeesVacation>

@{
    ViewBag.Title = "EmployeeVacation";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    var vacId = Request.QueryString["Employeeid"];
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.debug.js"
        integrity="sha384-NaWTHo/8YCBYJ59830LTz/P4aQZK1sS0SneOgAvhsIl3zBu8r9RevNg5lHCHAuQ/"
        crossorigin="anonymous"></script>

<div class="row">
    <div class="col-md-4">

        <ul class="nav nav-stacked nav-pills">
            <li id="PersonalInfo" style="color: #071689 !important; font-size: larger">
                @Html.ActionLink("Personal Information", "PersonalPage", "Employee", new { Employeeid = vacId }, null)
            </li>
            <li id="SalaryInfo" style="color: #071689 !important; font-size: larger">
                @Html.ActionLink("Salary Information", "SalaryInfo", "Employee", new { Employeeid = vacId }, null)
            </li>
            <li id="EmployeeDocs" style="color: #071689 !important; font-size: larger">
                @Html.ActionLink("My Documents", "EmployeeDocs", "Support", new { Employeeid = vacId }, null)
            </li>
            <li id="EmployeeVacation" class="active" style="color: #071689 !important; font-size: larger">
                @Html.ActionLink("Employee Vacation", "EmployeeVacation", "EmployeesVacation", new { Employeeid = vacId }, null)
            </li>

            <li id="EmployeeRating" style="color: #071689 !important; font-size: larger">
                @Html.ActionLink("Employee Rating", "EmployeeRating", "EmployeeRating", new { Employeeid = vacId }, null)
            </li>
            <li id="EmployeeRating" style="color: #071689 !important; font-size: larger">
                @Html.ActionLink("Termination Info", "TerminationInfo", "Employee", new { Employeeid = vacId }, null)
            </li>
            <li id="EmployeeRating" style="color: #071689 !important; font-size: larger">
                @Html.ActionLink("Exams Info", "ExamsInfo", "OnlineExam", new { Employeeid = vacId }, null)
            </li>
        </ul>
    </div>

    <div class="col-md-8" id="PersonalInfoDV">

        <h2 class="text-center" style="color: #071689 !important;">Employee Vacations</h2>

        @if (User.IsInRole("Administrator"))
        {
            @*<p>
                    @Html.ActionLink("Create New", "Create", new { Employeeid = vacId })

                </p>*@

            <div class="row" style="margin-top:3%">
                <div>
                    <input type="button"
                           class="btn btn-primary" style="float:right;" value="Add New Vacation"
                           onclick="location.href='@Url.Action("Create", new { Employeeid = vacId })'" />
                </div>
            </div>
        }
        <table class="table" style="margin-top:3%">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.startDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeId)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.startDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeId)
                    </td>
                    <td>
                        @if (User.IsInRole("Administrator"))
                        {
                            <div>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </div>
                        }
                    </td>
                </tr>
            }



        </table>

    </div>



    <!-- /.row -->
</div>
